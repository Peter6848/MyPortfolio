<div class="comment-card">
  <div class="card mb-4 box-shadow">
    <div class="card-body">
      <div class="row">
        <div class="col-md-2">
          <%= gravatar_helper(comment.user) %>
        </div>

        <div class="col-md-10">
          <div>
            <%= comment.content %>
          </div>

          <div class="comment-attribution">
            <span class="user-comment"><%= comment.user.first_name.upcase %></span> commented <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
